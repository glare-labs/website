---
import { GlareLabsLogo } from "@modules/logo";

const links = [
    {
        label: "Github",
        url: "https://github.com/glare-labs",
    },
    {
        label: "Website Source Code",
        url: "https://github.com/glare-labs/website",
    },
];
---

<footer class="footer-component">
    <GlareLabsLogo />

    <div class="tabs">
        {
            links.map((link) => (
                <a class="tab" target="_blank" href={link.url}>
                    {link.label}
                </a>
            ))
        }
    </div>
</footer>

<style>
    .footer-component {
        --round-size: 16px;
        --top-block-height: 8px;
        --top-block-width: 4px;
        --left-block-height: 5px;
        --left-block-width: 8px;
        --bottom-block-height: 8px;
        --bottom-block-width: 4px;
        --col-gap: 4px;
        --row-gap: 2px;

        min-height: 80px;
        padding: 0 24px;
        display: flex;
        align-items: center;
    }

    .tabs {
        display: flex;
        gap: 32px;
        align-items: center;

        & > .tab {
            font-size: 14px;
            color: var(--md-sys-color-on-surface-variant);

            &:hover {
                text-decoration-line: underline;
                text-underline-offset: 4px;
                color: var(--md-sys-color-on-surface);
            }
        }
    }
</style>
