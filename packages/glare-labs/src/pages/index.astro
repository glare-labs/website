---
import OpenInNewSvg from "@material-design-icons/svg/round/open_in_new.svg?raw";
import { GlareLabsLogo } from "@modules/logo";
import { ProductFooter } from "@modules/page-footer";
import { ProductHeader } from "@modules/page-header";
import { PageRootHtmlLayout } from "@shared/layouts";
import { MaterialThemeScript } from "@shared/material-design";
import { PageMeta } from "@shared/page-meta";
import ImportBaseStyle from "@shared/styles/import-base-style.astro";
import ImportJetbrainsMonoStyle from "@shared/styles/import-jetbrains-mono-style.astro";
import ImportMdTypescaleStyle from "@shared/styles/import-md-typescale-style.astro";
import ImportScrollBarStyle from "@shared/styles/import-scroll-bar-style.astro";
---

<PageRootHtmlLayout>
    <PageMeta
        slot="head"
        author="bre97"
        description="Glare Labs is a front-end open source development team focusing on Material Design. Provides front-end tools such as Vue-MDC."
        title="Glare Labs - Novice programmer focusing on Material Design"
        iconHref="/glare-labs-page-icon.svg"
        keywords="material design, vue-mdc, bre97"
        language="en-US"
        url="https://glare-labs.uk/"
        imageUrl="https://media-r2.glare-labs.uk/glare-labs-logo.png"
        imageAlt="Glare Labs"
        robots="index, follow"
        ogType="website"
    />

    <ImportBaseStyle slot="head" />
    <ImportJetbrainsMonoStyle slot="head" />
    <ImportMdTypescaleStyle slot="head" />
    <ImportScrollBarStyle slot="head" />
    <MaterialThemeScript slot="head" />

    <ProductHeader />

    <main class="content">
        <div class="hero area">
            <span class="wrapper">
                <GlareLabsLogo />
                <h1 class="headline md-typescale-display-medium">Glare Labs</h1>
            </span>
        </div>

        <section class="solutions area part">
            <h1 class="headline md-typescale-headline-medium">Solutions</h1>
            <div class="solution">
                <h2 class="title md-typescale-title-medium">Vue-MDC</h2>
                <p class="description md-typescale-body-medium">Material Design 3 styled components for Vue3js.</p>
                <a class="md-typescale-label-medium" target="_blank" href="https://github.com/glare-labs/vue-mdc" role="button">
                    <span class="label">Visit</span>
                    <span aria-hidden="true" class="icon svg" set:html={OpenInNewSvg} />
                </a>
            </div>
            <div class="solution">
                <h2 class="title md-typescale-title-medium">TailwindCSS Material Tokens</h2>
                <p class="description md-typescale-body-medium">Insert tokens in material design into tailwindcss as utils.</p>
                <a class="md-typescale-label-medium" target="_blank" href="https://github.com/glare-labs/tailwindcss-material-tokens">
                    <span class="label">Visit</span>
                    <span aria-hidden="true" class="icon svg" set:html={OpenInNewSvg} />
                </a>
            </div>
        </section>

        <section class="area part">
            <h1 class="headline md-typescale-headline-medium">Blog</h1>
            <p class="description md-typescale-body-medium">Browse the blog and get the latest information from the site and team author.</p>
            <a class="port-to-blog-button md-typescale-label-medium" target="_blank" href="https://blog.glare-labs.uk/">
                <span class="label">Visit</span>
                <span aria-hidden="true" class="icon svg" set:html={OpenInNewSvg} />
            </a>
        </section>

        <ProductFooter />
    </main>
</PageRootHtmlLayout>

<!-- Body -->
<style>
    body {
        background-color: var(--md-sys-color-surface);
    }
</style>

<!-- Border -->
<style>
    .area {
        border-bottom: 1px solid var(--md-sys-color-outline-variant);
    }
    .part {
        @media (max-width: 600px) {
            padding: 24px;
        }
        @media (min-width: 600px) and (max-width: 840px) {
            padding: 32px;
        }
        @media (min-width: 840px) and (max-width: 1200px) {
            padding: 48px;
        }
        @media (min-width: 1200px) {
            padding: 48px;
        }

        & > .headline {
            grid-column: 1/3;
            grid-row: 1/2;
            margin: 0 0 16px;
            color: var(--md-sys-color-on-surface);
        }

        & > .description {
            color: var(--md-sys-color-on-surface-variant);
        }
    }
</style>

<!-- Content -->
<style is:global>
    .icon.svg {
        & > svg {
            width: 1em;
            height: 1em;
            fill: currentColor;
        }
        color: var(--md-sys-color-on-surface);
    }
</style>

<style>
    .content {
        height: 100%;
        min-height: calc(100vh - 56px);
        background-color: var(--md-sys-color-surface);

        @media (min-width: 1200px) {
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            border-left: 1px solid var(--md-sys-color-outline-variant);
            border-right: 1px solid var(--md-sys-color-outline-variant);
        }
    }
    .hero {
        border-bottom: 1px solid var(--md-sys-color-outline-variant);
        position: relative;
        padding: 48px 0;

        & > .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;

            @media (max-width: 600px) {
                flex-direction: column;
            }
        }

        & .headline {
            text-align: center;
            display: block;
            position: relative;
            background-clip: text;
            color: var(--md-sys-color-on-surface);
            margin-top: 24px;
        }
    }
</style>

<!-- Solutions -->
<style is:global>
    .solutions {
        display: grid;
        grid-auto-rows: auto;
        grid-template-columns: 1fr 1fr;
        column-gap: 16px;

        & > .solution {
            grid-row: 2/3;
            border: 1px solid var(--md-sys-color-outline-variant);
            background-color: var(--md-sys-color-surface-container-low);
            padding: 16px;
            display: flex;
            flex-direction: column;
            gap: 8px;

            & > .title {
                color: var(--md-sys-color-on-surface);
            }

            & > p {
                color: var(--md-sys-color-on-surface-variant);
                flex-grow: 1;
            }

            & > a {
                display: inline-flex;
                align-items: center;
                gap: 4px;

                & > .label {
                    color: var(--md-sys-color-primary);
                    text-decoration-line: underline;
                    text-underline-offset: 2px;

                    transition-property: text-underline-offset;
                    transition-duration: 150ms;

                    &:hover {
                        text-underline-offset: 4px;
                    }
                }

                & > .icon svg {
                    font-size: 14px;
                }
            }

            & > :is(h3, p) {
                overflow: hidden;
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 3;
            }
        }
    }
</style>

<!-- Blog -->
<style>
    .port-to-blog-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-height: 40px;
        min-width: 72px;
        padding: 0 24px;
        margin: 16px 0 0;
        gap: 8px;
        border: 1px solid var(--md-sys-color-outline-variant);
        background-color: var(--md-sys-color-surface-container);

        & > .label {
            text-decoration-line: underline;
            text-underline-offset: 2px;
            color: var(--md-sys-color-primary);

            transition-property: text-underline-offset;
            transition-duration: 150ms;
        }
        &:hover {
            & > .label {
                text-underline-offset: 4px;
            }
        }
        & > .icon {
            font-size: 14px;
        }
    }
</style>
