---
import "@fontsource/jetbrains-mono";
---

<style is:global>
    @layer default-family {
        :root,
        html,
        body {
            font-family: "Jetbrains Mono", "Roboto", "Noto", "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji";

            --md-ref-typeface-brand: "Jetbrains Mono", "Roboto", "Noto sans sc", "Noto sans";
            --md-ref-typeface-plain: "Jetbrains Mono", "Roboto", "Noto sans sc", "Noto sans";
        }
    }
</style>
