---
interface Props {
    lang?: string;
}

const { lang = "en-US" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <slot name="head" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <body>
        <slot />
    </body>
</html>
