<span class="navigation-drawer-open-button">
    <span class="toggle" role="button">
        <slot />
    </span>

    <slot name="navigation-drawer" />
</span>

<script>
    document.addEventListener("astro:page-load", () => {
        const openButtons = document.querySelectorAll(".navigation-drawer-open-button");

        openButtons.forEach((button) => {
            const handleOpenButtonClick = (_: Event) => {
                button.querySelector("&>.navigation-drawer")?.dispatchEvent(new Event("open"));
            };

            button.querySelector("&>.toggle").addEventListener("click", handleOpenButtonClick);
        });
    });
</script>
