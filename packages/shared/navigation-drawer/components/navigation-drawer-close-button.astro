<md-icon-button class="close-button">
    <md-icon>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M18.3 5.71a.996.996 0 0 0-1.41 0L12 10.59 7.11 5.7A.996.996 0 1 0 5.7 7.11L10.59 12 5.7 16.89a.996.996 0 1 0 1.41 1.41L12 13.41l4.89 4.89a.996.996 0 1 0 1.41-1.41L13.41 12l4.89-4.89c.38-.38.38-1.02 0-1.4z"></path></svg>
    </md-icon>
</md-icon-button>

<script>
    document.addEventListener("astro:page-load", () => {
        const closeButtons = document.querySelectorAll(".close-button");

        closeButtons.forEach((button) => {
            const handleCloseButtonClick = (_: Event) => {
                button.dispatchEvent(new Event("close", { bubbles: true }));
            };
            button.addEventListener("click", handleCloseButtonClick);
        });
    });
</script>
