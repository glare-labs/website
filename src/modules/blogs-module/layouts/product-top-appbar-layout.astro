---
/**
 * @implements header.astro
 * @private
 */
---

<header class="header">
    <span class="start">
        <slot name="start" />
    </span>
    <span class="headline">
        <slot />
    </span>
    <div class="end">
        <slot name="actions" />
    </div>
</header>

<style>
    .header {
        --var-header-padding-left: var(--header-padding-left, 24px);
        --var-header-padding-right: var(--header-padding-right, 24px);
        --var-header-width: var(--header-width, 100%);
        --var-header-max-width: var(--header-max-width, 100vw);

        height: 64px;
        width: var(--var-header-width);
        max-width: var(--var-header-max-width);
        margin: auto;
        display: grid;
        align-items: center;
        grid-template-columns: 48px 1fr auto;
        grid-template-rows: 1fr;
        padding-left: var(--var-header-padding-left);
        padding-right: var(--var-header-padding-right);
        background-color: var(
            --header-container-color,
            var(--md-sys-color-surface)
        );

        transition-property: background-color;
        transition-duration: 200ms;
    }
    .headline {
        grid-column: 2/3;
    }
    &:not(:has(.header .start *)) {
        .headline {
            grid-column: 1/3;
        }
        .start {
            display: none;
        }
    }
    .end {
        padding-right: 4px;
        display: flex;
        gap: 4px;
        grid-column: 3/4;
    }
</style>

