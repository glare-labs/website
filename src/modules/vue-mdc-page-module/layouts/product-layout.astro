<div class="product-layout" transition:name="product-layout">
    <main class="content-wrapper">
        <slot />
    </main>
    <nav class="navigation-rail-wrapper">
        <slot name="navigation-rail" />
    </nav>
    <nav class="navigation-bar-wrapper">
        <slot name="navigation-bar" />
    </nav>
</div>

<style>
    .product-layout {
        display: grid;
        overflow: hidden;

        @media (max-width: 600px) {
            grid-template-rows: 1fr auto;
            grid-template-columns: 1fr;
        }
        @media (min-width: 600px) {
            grid-template-rows: 1fr;
            grid-template-columns: auto 1fr;
        }

        @media (max-width: 600px) {
            & > .content-wrapper {
                grid-column: 1/2;
                grid-row: 1/2;
            }
            & > .navigation-rail-wrapper {
                display: none;
            }
            & > .navigation-bar-wrapper {
                display: block;
                grid-column: 1/2;
                grid-row: 2/3;
            }
        }
        @media (min-width: 600px) {
            & > .content-wrapper {
                grid-column: 2/3;
                grid-row: 1/2;
            }
            & > .navigation-rail-wrapper {
                display: block;
                grid-column: 1/2;
                grid-row: 1/2;
            }
            & > .navigation-bar-wrapper {
                display: none;
            }
        }

        height: 100%;
        min-height: 100svh;
        max-height: 100svh;
        padding: 0;
        margin: 0;
        background-color: var(--md-sys-color-surface);

        & > .content-wrapper {
            overflow: auto;
            position: relative;
            height: 100%;
        }
    }
</style>
