---
import ProductRootHtmlLayout from "@layouts/ProductRootHtmlLayout.astro";
import ProductHeader from "@modules/glare-labs/components/ProductHeader.astro";
import {
    BaseGlobalStyle,
    BaseMaterialTheme,
    ImportJetbrainsMonoStyle,
    ImportMaterialSymbols,
    PageMetaInfo,
} from "@modules/shared-module";
---

<ProductRootHtmlLayout>
    <PageMetaInfo
        slot="head"
        author="bre97"
        description="Check out Glare Labs' solutions and other products."
        title="Solutions"
        iconHref="/glare-labs-page-icon.svg"
        keywords="material design, vue-mdc, bre97, solution, glare-labs"
        language="en-US"
        url="https://glare-labs.uk/feature/glare-labs/solutions/"
        imageUrl="https://media.glare-labs.uk/glare-labs-logo.png"
        imageAlt="Glare Labs"
        robots="index, follow"
        ogType="website"
    />

    <ImportJetbrainsMonoStyle slot="head-after" />
    <BaseMaterialTheme slot="head-after" />
    <BaseGlobalStyle slot="head-after" />
    <ImportMaterialSymbols slot="head-after" />

    <ProductHeader />
</ProductRootHtmlLayout>
